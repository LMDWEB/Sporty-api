</head>

<body>

<div id="header-holder">
    <div class="cloud-bg"></div>
    <nav id="nav" class="navbar navbar-full">
        <div class="container-fluid">
            <div class="container container-nav">
                <div class="row">
                    <div class="col-md-12">
                        <div class="navbar-header">
                            <button aria-expanded="false" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset('img/logo.png') }}" alt="Sporty"></a>
                        </div>
                        <div style="height: 1px;" role="main" aria-expanded="false" class="navbar-collapse collapse navbar-collapse-centered" id="bs">
                            <ul class="nav navbar-nav navbar-nav-centered">
                                <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('token') }}">Token</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('price') }}">Pricing</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('swagger_ui') }}">API Documentation</a>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right other-navbar">
                            {% if app.user %}
                                <li class="nav-item">
                                    <a class="btn btn-outline-primary mr-2" href="{{ path('my_account') }}">{{ app.user.username }}</a>
                                    <a class="btn btn-outline-danger" href="{{ path('account_logout') }}">Log out</a>
                                </li>                    
                            {% else %}
                               <div class="login-div">
                                    <li class="nav-item login-display">
                                        <a class="nav-link" href="{{ path('account_login') }}">Login</a>
                                    </li>
                                    <li class="nav-item register-display">
                                        <a class="nav-link" href="{{ path('account_register') }}">Register</a>
                                    </li>
                                </div>
                            {% endif %}
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div id="top-content" class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="main-slider">
                        <div class="slide">
                            <div class="row rtl-row">
                                <div class="col-sm-5">
                                    <div class="img-holder">
                                        <img src="images/slide-img1.png" alt="">
                                    </div>
                                </div>
                                <div class="col-sm-7">
                                    <div class="b-text">Sporty une API<br>faite pour vous !</div>
                                    <div class="m-text">Commencer par voir <span class="bold">nos offres</span></div>
                                    <a href="{{ path('price') }}" class="hbtn hbtn-primary hbtn-lg">Offres</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% for label,messages in app.flashes %}

    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message | raw}}</p>
            {% endfor %}
        </div>
    </div>

{% endfor %}

{% block body %}{% endblock %}

