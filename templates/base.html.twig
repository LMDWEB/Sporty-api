<body>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">Sporty</h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="{{ path('home') }}">Home</a>
        <a class="p-2 text-dark" href="{{ path('api') }}">API Documentation</a>
        <a class="p-2 text-dark" href="{{ path('token') }}">Token</a>
        <a class="p-2 text-dark" href="{{ path('price') }}">Pricing</a>
    </nav>
    {#<a class="btn btn-outline-primary" href="#">Sign up</a>#}
        {% if app.user %}
            <a class="btn btn-outline-danger" href="{{ path('account_logout') }}">Log out</a>
        {% else %}
            <a class="btn btn-outline-primary" href="{{ path('account_login') }}">Sign in</a>
        {% endif %}

    </a>
</div>

{% block body %}{% endblock %}

<div class="container">

